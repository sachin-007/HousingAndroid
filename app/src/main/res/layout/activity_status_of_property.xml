<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".status_of_property">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/icon_outline_arrow_left"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status of Your Property"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:fontFamily="@font/urbanist_bold"
                    android:layout_marginStart="15dp"
                    />

                <TextView
                    android:layout_marginStart="15dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available From"
                    android:textSize="20sp"

                    android:fontFamily="@font/urbanist_bold"
                    android:layout_marginTop="50dp"
                    />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_under_construction"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/celebes_reguler"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonoutline"
                    android:textColor="@color/black"
                    android:text="Under Construction"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_ready_to_move"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/btn_under_construction"

                    android:textSize="16sp"
                    android:fontFamily="@font/celebes_reguler"
                    android:textAllCaps="false"
                    android:text="Ready to Move"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonoutline"
                    android:textColor="@color/black"
                    />



            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <TextView
                        android:id="@+id/selected_option_textview"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/spinner_options" />

                <Spinner
                    android:id="@+id/spinner_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/btn_ready_to_move"
                    />




                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="bottom|end">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nextotppg"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/but_red"
                    android:text="Contine"
                    android:textSize="18sp"
                    android:fontFamily="@font/celebes_semi_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
</RelativeLayout>