                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"

                    android:orientation="horizontal">

                    <!-- EditText for entering the square foot value -->
                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/edit_text_square_foot"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:hint="Super Area"
                        android:layout_marginRight="10dp"
                        android:inputType="numberDecimal"
                        android:maxLines="1" />

                    <!-- Spinner for selecting the unit (sqft, sqyrd, etc.) -->
                    <Spinner
                        android:id="@+id/unitvalues1"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        />

                </LinearLayout>




                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|end">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/topiceaccept"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/but_red"
                        android:text="Contine"
                        android:textSize="18sp"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>