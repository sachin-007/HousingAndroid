<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".housing_listing"
    android:background="@color/white"
    android:padding="10dp"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_housing_listing"

    >

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_marginTop="16dp" />-->

    <LinearLayout
        android:id="@+id/initallayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CF9FFF"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_outline_arrow_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist_bold"
                    android:gravity="center_vertical"
                    android:text="PG"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_regular"
                        android:text="21 Properties"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/whitebox"
                    android:fontFamily="@font/urbanist_regular"
                    android:gravity="center"
                    android:text="Girls"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/whitebox"
                    android:fontFamily="@font/urbanist_regular"
                    android:text="Budget"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/whitebox"
                    android:fontFamily="@font/urbanist_regular"
                    android:gravity="center"
                    android:text="Occupancy"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/whitebox"
                    android:fontFamily="@font/urbanist_regular"
                    android:gravity="center"
                    android:text="Verified"
                    android:textColor="@color/black"
                    android:textSize="18dp" />



            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#A2DAE3">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mobilehand"
                android:outlineAmbientShadowColor="@color/black"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enjoy 0% Convenience Free"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/urbanist_semi_bold"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#FF0000"
                android:textSize="20dp"
                android:text="Pay Rent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/whitebox"
                android:fontFamily="@font/urbanist_regular"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Get Phone No."
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/whitebox"
                android:fontFamily="@font/urbanist_regular"
                android:text="Contact Owner"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/propertyimageview"
                            android:layout_margin="10dp"
                            android:scaleType="fitXY"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:src="@drawable/building"/>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ "
                                    android:fontFamily="@font/celebes_semi_bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:id="@+id/priceTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/celebes_semi_bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=" onword"
                                    android:fontFamily="@font/celebes_reguler"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:id="@+id/sellerNameTextView"
                                    android:maxLength="5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#808080"
                                    android:fontFamily="@font/celebes_reguler"
                                    android:layout_marginTop="8dp"
                                    android:textSize="16sp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" by "
                                    android:textColor="#808080"
                                    android:fontFamily="@font/celebes_reguler"
                                    android:layout_marginTop="8dp"
                                    android:textSize="16sp"/>
                                <TextView
                                    android:maxLength="5"
                                    android:id="@+id/propertyByNameTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" GetSetHome"
                                    android:textColor="#808080"
                                    android:fontFamily="@font/celebes_reguler"
                                    android:layout_marginTop="8dp"
                                    android:textSize="16sp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="20dp"
                                    android:src="@drawable/location"
                                    />
                                <TextView
                                    android:id="@+id/locationTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Goregaon west"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginBottom="10dp"
                                android:gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Facilities "
                                    android:textColor="#808080"
                                    android:fontFamily="@font/celebes_reguler"
                                    />
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/wifi"
                                    />
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/location"
                                    />
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/location"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" +11 More"
                                    android:textColor="#808080"
                                    android:fontFamily="@font/celebes_reguler"
                                    />


                            </LinearLayout>




                        </LinearLayout>




                    </LinearLayout>
                    <View
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line" />
                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="15dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Twin Sharing with AC"
                                android:fontFamily="@font/celebes_reguler"
                                android:textSize="16sp"
                                android:textColor="#808080"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ "
                                    android:fontFamily="@font/celebes_semi_bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    />

                                <TextView

                                    android:id="@+id/twinSharePriceTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/celebes_semi_bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"

                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="15dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Triple Sharing With AC"
                                android:fontFamily="@font/celebes_reguler"
                                android:textSize="16sp"
                                android:textColor="#808080"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ "
                                    android:fontFamily="@font/celebes_semi_bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:id="@+id/tripleSharePriceTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:fontFamily="@font/celebes_semi_bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"

                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/divider_line" />
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/verification"
                            android:layout_marginStart="15dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Centrally Located PG Near NIRLON with No Brokerage,2..."
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/celebes_reguler"
                            android:textColor="#808080"
                            android:layout_marginStart="15dp"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Get Phone No."
                        android:layout_weight="1"
                        android:background="@drawable/but_pinkred"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:textColor="#FF0000"

                        android:textAllCaps="false"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:fontFamily="@font/celebes_semi_bold"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Contact Owner"
                        android:background="@drawable/but_redwhite"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        />
                </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</RelativeLayout>