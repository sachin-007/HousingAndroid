<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#808080"
    android:layout_height="match_parent"
    tools:context=".AddOnPlan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#808080"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"

                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_marginTop="10dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/celebes_bold"
                        android:gravity="center"
                        android:text="Add On"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:gravity="center"
                        android:text="$3.8/mon"
                        android:textColor="@color/black"
                        android:textSize="22dp" />

                    <androidx.appcompat.widget.AppCompatButton

                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_gradient"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:gravity="center"
                        android:text="Choose Plan"
                        android:textColor="@color/white"

                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textAllCaps="false" />

                    <LinearLayout
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/celebes_reguler"
                            android:gravity="center"
                            android:text="Renews at $19.88/month"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="View more"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@drawable/divider_line"
                            />
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feature One"
                            android:textColor="@color/black"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:textSize="18sp"
                            /><View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line"
                        />
                        <CheckBox
                            android:textColor="@color/black"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feature One"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:textSize="18sp"
                            /><View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line"
                        />
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feature One"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"

                            /><View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line"
                        />
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feature One"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"

                            /><View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@drawable/divider_line"
                        />
                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feature One"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"

                            />
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@drawable/divider_line"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!-- The rest of your plan layout goes here -->

            </androidx.cardview.widget.CardView>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>