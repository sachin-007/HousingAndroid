<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ready_to_const_popup">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/celebes_semi_bold"
                android:text="Age of Construction"
                android:drawableEnd="@drawable/close"
                />

        </LinearLayout>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Construction"
            android:fontFamily="@font/celebes_reguler"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/celebes_reguler"

            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Less than 5 Year"

            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:id="@+id/option3"
            android:textColor="@color/black"
            android:fontFamily="@font/celebes_reguler"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 to 10 years"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/celebes_reguler"

            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 to 15 years"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:id="@+id/option5"
            android:textColor="@color/black"
            android:fontFamily="@font/celebes_reguler"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 to 20 years"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:id="@+id/option6"
            android:textColor="@color/black"
            android:fontFamily="@font/celebes_reguler"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="above 20 years"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            />
    </LinearLayout>

</RelativeLayout>