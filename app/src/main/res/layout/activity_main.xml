<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >



    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:text="Sell or Rent"/>
        <TextView

            android:layout_width="wrap_content"
            android:textSize="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="@color/black"
            android:text="Your property"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/celebes_reguler"

            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:text="We have over 15 Lac buyers and tenants for you!"
            android:textColor="@color/black"
            />
        <TextView

            android:fontFamily="@font/celebes_reguler"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:text="You are posting this property for"
            android:textColor="@color/black"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:text="₹̶5̶0̶0̶0̶"
            android:fontFamily="@font/celebes_semi_bold"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_marginStart="5dp"
            android:layout_height="25dp"
            android:src="@drawable/free"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_gravity="center_vertical"

                android:layout_width="20dp"
                android:layout_height="15dp"
                android:background="@drawable/rightdone"
                />
            <TextView
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/celebes_reguler"


                android:text="Get Contact Details of upto"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text=" 5 Responses"
                android:fontFamily="@font/celebes_semi_bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rightdone"
                />
            <TextView
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/celebes_reguler"

                android:text="Access to"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"

                android:text=" 15 Lac"
                android:fontFamily="@font/celebes_semi_bold"
                />
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Buyers &amp; Tenants"
                android:textColor="@color/black"
                android:fontFamily="@font/celebes_reguler"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/celebes_reguler"
                android:textSize="16sp"
                android:text="Get"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 10X more"
                android:textColor="#00FFFF"
                android:textSize="16sp"
                android:fontFamily="@font/celebes_semi_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/celebes_reguler"

                android:textSize="16sp"
                android:text=" Responses by just"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom|end"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/firstnext"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Contine"
        android:textSize="18sp"
        android:fontFamily="@font/celebes_semi_bold"
        android:textColor="@color/white"
        android:background="@drawable/but_red"
        android:textAllCaps="false"
        />

    </LinearLayout>


</LinearLayout>

</RelativeLayout>