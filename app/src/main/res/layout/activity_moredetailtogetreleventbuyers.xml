                        <!-- EditText for entering the square foot value -->
                        <EditText
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:id="@+id/meteredit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Meter"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                        <!-- Spinner for selecting the unit (sqft, sqyrd, etc.) -->
                        <Spinner
                            android:id="@+id/spinner_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <CheckBox
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_weight="1"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:text="I want to receive notifications on whatsapp" />



        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/topiceaccept"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/but_red"
                android:text="Contine"
                android:textSize="18sp"
                android:fontFamily="@font/celebes_semi_bold"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
