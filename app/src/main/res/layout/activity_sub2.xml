<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".sub2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_margin="15dp"
                android:src="@drawable/icon_outline_arrow_left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More details to get relevent buyers"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/urbanist_bold"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plot Specification"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:layout_marginBottom="5dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <!-- EditText for entering the square foot value -->
                        <EditText
                            android:layout_width="match_parent"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:hint="Number of Floor Allowed For Constrant"
                            android:layout_marginRight="10dp"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                        <!-- Spinner for selecting the unit (sqft, sqyrd, etc.) -->
                        <Spinner
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- EditText for entering the square foot value -->

                        <EditText
                            android:layout_width="match_parent"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:hint="No.of Open Sides (option)"
                            android:layout_marginRight="10dp"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                        <!-- Spinner for selecting the unit (sqft, sqyrd, etc.) -->
                        <Spinner
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=" Width of Road facing the Plot (option)"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:layout_marginBottom="5dp"
                            />
                        <LinearLayout
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- EditText for entering the square foot value -->
                            <EditText
                                android:layout_width="match_parent"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:hint="Road Width"
                                android:layout_marginRight="10dp"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />

                            <!-- Spinner for selecting the unit (sqft, sqyrd, etc.) -->
                            <Spinner
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
<!--
-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boundary wall made"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:layout_marginBottom="5dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >

                            <RadioGroup
                                android:id="@+id/radio_group_options"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- Three RadioButtons representing your options -->

                                <RadioButton
                                    android:fontFamily="@font/celebes_reguler"
                                    android:textSize="16sp"
                                    android:paddingStart="5dp"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_height="30dp"
                                    android:text="Yes" />
                                <RadioButton
                                    android:fontFamily="@font/celebes_reguler"
                                    android:textSize="16sp"
                                    android:paddingStart="5dp"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_height="30dp"
                                    android:text="No" />

                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Plot Specification"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/celebes_semi_bold"
                            android:layout_marginBottom="5dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:orientation="horizontal">

                            <!-- EditText for entering the square foot value -->
                            <EditText
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:hint="Plot Area"
                                android:layout_marginRight="10dp"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />

                            <!-- Spinner for selecting the unit (sqft, sqyrd, etc.) -->
                            <Spinner
                                android:layout_width="115dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <EditText
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:hint="Plot Length in yrd (optional)"
                                android:layout_marginRight="10dp"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />
<!--
-->
                            <EditText
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:hint="Plot Breadth in yrd (optional)"
                                android:layout_marginRight="10dp"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="bottom|end">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/topiceaccept"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/but_red"
                        android:text="Contine"
                        android:textSize="18sp"
                        android:fontFamily="@font/celebes_semi_bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>




            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>