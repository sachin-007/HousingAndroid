<!-- white_rectangle_red_border_button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- White background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the color to white -->
            <corners android:radius="1dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Red border -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:color="#FF0000" android:width="1dp" /> <!-- Set the color to red and adjust the width as needed -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius to match the white background -->
        </shape>
    </item>

</layer-list>
